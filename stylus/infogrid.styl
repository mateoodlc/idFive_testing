.info-grid
    width 100vw
    height 100vh
    .info-grid-first_row
        display flex
        justify-content center
        align-items center
        height 50%
        +mobile()
            flex-wrap wrap
            justify-content flex-end
            flex-direction column-reverse
            align-items top
    .info-grid-second_row
        display flex
        justify-content center
        align-items center
        height 50%
        +mobile()
            flex-wrap wrap
            justify-content flex-start
            align-items flex-start

.info-grid_description
    display flex
    justify-content center
    width 50%
    text-align left
    p
        max-width 50%
    +mobile()
        width 100%
        p
            max-width 80%
            text-align center
.info-grid_image
    width 50%
    height 100%
    background-size cover
    background-repeat no-repeat
    background-origin center
    +mobile()
        width 100%
        height 50%
        margin-bottom 30px