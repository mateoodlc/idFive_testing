@import "banner.styl"
@import "about.styl"
@import "infogrid.styl"
@import "footer.styl"
@import "vars.styl"

*
    margin 0
    padding 0

body
    padding 5%

.main-container
    height 100vh

.call-to-action
    display flex
    justify-content space-around
    align-items center
    height 245px
    background-color var(--purple)
    padding 50px
    p
        max-width 70%
    +mobile()
        flex-wrap wrap
        padding 100px 60px
        p
            text-align center
            max-width 100%

.menu-container
    position absolute
    width 100vw
    height 100vh
    top 0
    left -100%
    transition 1s all ease 
    background var(--purple)
    &.menu-opened
        left 0 !important

.close-button
    position absolute
    z-index 999
    top 5%
    right 5%
    .close-line1
        content ''
        display block
        width 15px
        height 2px
        background white
        transform rotate(-45deg)
    .close-line2
        content ''
        display block
        width 15px
        height 2px
        background white
        transform rotate(45deg)
